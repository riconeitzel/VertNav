<config>
    <modules>
        <RicoNeitzel_VertNav>
            <version>0.4.2</version>
        </RicoNeitzel_VertNav>
    </modules>

    <global>
        <blocks>
            <vertnav>
                <class>RicoNeitzel_VertNav_Block</class>
            </vertnav>
        </blocks>
        <models>
            <vertnav>
                <class>RicoNeitzel_VertNav_Model</class>
            </vertnav>
        </models>
        <helpers>
            <vertnav>
                <class>RicoNeitzel_VertNav_Helper</class>
            </vertnav>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <vertnav>
                    <file>vertnav.xml</file>
                </vertnav>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <RicoNeitzel_VertNav>
                    <files>
                        <default>RicoNeitzel_VertNav.csv</default>
                    </files>
                </RicoNeitzel_VertNav>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <catalog>
            <vertnav>
                <display_product_count>0</display_product_count>
                <expand_all>0</expand_all>
                <expand_all_max_depth>0</expand_all_max_depth>
                <hide_top>1</hide_top>
                <hide_vertnav>0</hide_vertnav>
                <vertnav_root>root</vertnav_root>
                <fallback_to_root>1</fallback_to_root>
            </vertnav>
        </catalog>
    </default>
</config>

