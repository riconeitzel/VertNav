<?xml version="1.0"?>
<config>
    <modules>
        <RicoNeitzel_VertNav>
            <version>0.2.2</version>
        </RicoNeitzel_VertNav>
    </modules>

    <global>
    	<blocks>
    		<vertnav>
				<class>RicoNeitzel_VertNav_Block</class>
    		</vertnav>
    	</blocks>
		<helpers>
    		<vertnav>
				<class>RicoNeitzel_VertNav_Helper</class>
    		</vertnav>
		</helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <vertnav>
                    <file>vertnav.xml</file>
                </vertnav>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
    	<translate>
    		<modules>
    			<RicoNeitzel_VertNav>
    				<files>
    					<default>RicoNeitzel_VertNav.csv</default>
    				</files>
    			</RicoNeitzel_VertNav>
    		</modules>
    	</translate>
    </adminhtml>
    <default>
    	<catalog>
    		<vertnav>
    			<display_product_count>0</display_product_count>
				<expand_all>0</expand_all>
				<expand_all_max_depth>0</expand_all_max_depth>
    		</vertnav>
    	</catalog>
    </default>
</config>

